<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<system.diagnostics>
		<trace autoflush="true">
			<listeners>
				<add
					name="textWriterTraceListener"
					type="System.Diagnostics.TextWriterTraceListener"
					initializeData="E:\CD_CN\LogBackUp\log4net.txt" />
			</listeners>
		</trace>
	</system.diagnostics>
	<log4net debug="true">

		<appender name="errorLog" type="log4net.Appender.RollingFileAppender">
			<filter type="log4net.Filter.LevelRangeFilter">
				<param name="LevelMin" value="ERROR"/>
				<param name="LevelMax" value="ERROR"/>
			</filter>
			<param name="File" value="E:\CD_CN\LogBackUp\logError.log" />
			<encoding type="System.Text.UTF8Encoding"/>
			<param name="AppendToFile" value="true" />
			<maximumFileSize value="100KB" />
			<maxSizeRollBackups value="10" />
			<param name="RollingStyle" value="Date" />
			<param name="DatePattern" value="yyyy.MM.dd" />
			<param name="StaticLogFileName" value="true" />
			<param name="CountDirection" value="1" />
			<layout type="log4net.Layout.PatternLayout,log4net">
				<!--<param name="Header" value="[Server startup]&#13;&#10;" />
        <param name="Footer" value="[Server shutdown]&#13;&#10;" />-->
				<param name="ConversionPattern" value="(%property{currentUser}) %date %level %logger - %message %newline" />
			</layout>
		</appender>
		<appender name="infoLog" type="log4net.Appender.RollingFileAppender">
			<filter type="log4net.Filter.LevelRangeFilter">
				<param name="LevelMin" value="DEBUG"/>
				<param name="LevelMax" value="WARN"/>
			</filter>
			<param name="File" value="E:\CD_CN\LogBackUp\logInfo.log" />
			<encoding type="System.Text.UTF8Encoding"/>
			<param name="AppendToFile" value="true" />
			<maximumFileSize value="100KB" />
			<maxSizeRollBackups value="10" />
			<param name="RollingStyle" value="Date" />
			<param name="DatePattern" value="yyyy.MM.dd" />
			<param name="StaticLogFileName" value="true" />
			<param name="CountDirection" value="1" />
			<layout type="log4net.Layout.PatternLayout,log4net">
				<!--<param name="Header" value="[Server startup]&#13;&#10;" />
        <param name="Footer" value="[Server shutdown]&#13;&#10;" />-->
				<param name="ConversionPattern" value="(%property{currentUser}) %date %level %logger - %message %newline" />
			</layout>
		</appender>



		<root>
			<level value="ALL" />
			<appender-ref ref="errorLog" />
			<appender-ref ref="infoLog" />
		</root>
	</log4net>

</configuration>